<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 title">All Categories</h1>
  </div>
</div>

<div class="cards-list">
  <div class="container">
    <div class="row">
      <div class="cards-list">
        <% @categories.each do |category| %>
          <div class="card">
            <div class="card_image"> <img src="https://images.unsplash.com/photo-1518640467707-6811f4a6ab73?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80" /> </div>
            <div class="card_title title-white">
              <h5 class="card-title title"><%= category.title %></h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>